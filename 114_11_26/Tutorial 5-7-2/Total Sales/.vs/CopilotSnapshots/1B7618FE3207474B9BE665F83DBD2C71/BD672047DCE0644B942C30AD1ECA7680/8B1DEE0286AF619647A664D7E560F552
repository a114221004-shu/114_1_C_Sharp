using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;
using System.IO;

namespace Total_Sales
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
        }

        private void calculateButton_Click(object sender, EventArgs e)
        {
            // 計算按鈕點擊事件處理
            StreamReader inputFile;
            decimal totalSales = 0m;
            decimal currentSales = 0m;

            try
            {
                inputFile = File.OpenText("Sales.txt");
                // 在讀取前清空 ListBox 以避免重複顯示
                this.slaesListBox.Items.Clear();
                while (!inputFile.EndOfStream)
                {
                    // 先讀取一行文字，將原始字串加入 ListBox 顯示
                    string line = inputFile.ReadLine();
                    this.slaesListBox.Items.Add(line);

                    // 再嘗試解析成 decimal 並累加
                    if (!string.IsNullOrWhiteSpace(line))
                    {
                        currentSales = decimal.Parse(line);
                        totalSales += currentSales;
                    }
                }
                inputFile.Close();
                totalLabel.Text = totalSales.ToString("C");
            }
            catch (Exception ex)
            {
                MessageBox.Show("發生錯誤: " + ex.Message);
                return;
            }

        }

        private void exitButton_Click(object sender, EventArgs e)
        {
            // 關閉表單
            this.Close();
        }
    }
}
